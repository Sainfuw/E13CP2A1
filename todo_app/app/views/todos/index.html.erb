
<%- @todos.each do |todo| %>
  <div class="well" style="background-color:<%= 'lightgreen' if todo.completed %>">
    <%= todo.description %>
    <%= link_to 'Mostrar', todo, class:'btn btn-primary pull-right' %>
  </div>
<% end %>
<%= link_to "Crear ToDo", todos_new_path, class: "btn btn-success form-control" %>
