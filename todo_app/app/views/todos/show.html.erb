<div class="container text-center air">
  <h1>ToDo <%= @todo.id %></h1>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td><code>Descripcion</code></td>
          <td><%= @todo.description %></td>
        </tr>
        <tr>
          <td><code>Completado</code></td>
          <td><%= @completed %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to 'Volver', todos_path, class: 'btn btn-success form-control' %>
  </div>
</div>
